{
  "suggest.echodocSupport": true,

  // coc-tsserver
  "javascript.suggestionActions.enabled": false, // https://github.com/Microsoft/vscode/issues/47299

  // coc-eslint
  "eslint.filetypes": ["javascript", "typescript", "typescriptreact", "javascriptreact"],

  // coc-python
  "python.pythonPath": "/usr/bin/python3",
  "python.jediEnabled": true,  // TODO: Remove (switches to python-language-server instead of Jedi) when issue is fixed: https://github.com/Microsoft/python-language-server/issues/918
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.formatting.provider": "yapf"
}
